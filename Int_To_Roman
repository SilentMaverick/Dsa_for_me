class solution(){
  public : 
  string inttoroman(int sum){
     std::vector<int> values = {1000, 900, 500, 400, 100, 90, 50, 40, 10, 9, 5, 4, 1};
      std::vector<std::string> symbols = {"M", "CM", "D", "CD", "C", "XC", "L", "XL", "X", "IX", "V", "IV", "I"};
    string result = "";
    for(int i = 0 ; i < values.size() ; i++){
      while(sum >= values){
        result += symbols[i];
        sum -= values[i];
        }
      }
    return result;
    }
  };
