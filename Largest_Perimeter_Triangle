class Solution {
public:
    int largestPerimeter(std::vector<int>& nums) {
        sort(nums.begin(), nums.end());
        for(int i = nums.size()-1 ;i>= 2 ;i--){
            if(nums[i] < nums[i-1] + nums[i-2]){
                int peri = nums[i]+nums[i-1]+nums[i-2];
                return peri;
            }
        }
        return 0;
    }
};
